{
  "version": 2,
  "name": "khane-ka-shauk",
  "builds": [
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/static-build", 
      "config": { 
        "distDir": "build" 
      } 
    }
  ],
  "routes": [
    { 
      "src": "/(restaurants|users)(.*)", 
      "dest": "https://foodie-club-backend.onrender.com$1$2" 
    },
    { 
      "src": "/(.*)", 
      "dest": "frontend/build/$1" 
    }
  ]
}
